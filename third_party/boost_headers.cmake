set(BOOST_PREFIX "boost_headers_1_82_0")
set(BOOST_URL ${CMAKE_CURRENT_SOURCE_DIR}/${BOOST_PREFIX}.tar.gz)
set(BOOST_EXTRACT_DIR ${CMAKE_BINARY_DIR}/third_party)
set(BOOST_INCLUDE_DIR ${BOOST_EXTRACT_DIR}/boost)

execute_process(COMMAND ${CMAKE_COMMAND} -E tar xzf ${BOOST_URL}
                WORKING_DIRECTORY ${BOOST_EXTRACT_DIR})

file(COPY ${BOOST_INCLUDE_DIR}
  DESTINATION ${CMAKE_BINARY_DIR}/include)

install(DIRECTORY ${BOOST_INCLUDE_DIR} DESTINATION ${CMAKE_BINARY_DIR}/include/boost)
